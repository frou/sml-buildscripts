#!/bin/bash

set -e

arg="$1"

if [ -z "$arg" ]; then
    echo "Usage: $0 file.sml" 1>&2
    echo "       $0 file.mlb" 1>&2
    exit 1
fi

set -u

mydir=$(dirname "$0")
. "$mydir/smlbuild-include.sh"

out=$(get_outfile "$arg")

obj="/tmp/obj.$$.o"
trap "rm -f ${obj}" 0

( expand_arg "$arg" |
	sed 's/^\(.*\)$/use "\1";/' ;            # wrap filenames in REPL use calls
  echo 'PolyML.export("'"$obj"'", main);' ) |    # ask poly to export object file
    poly -q --error-exit &&
    polyc -o "$out" "$obj"                       # compile object to executable

